<header class="intro-header" style="background-image: url('../assets/home-bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>Clean Blog</h1>
                    <hr class="small">
                    <span class="subheading">A Clean Blog Theme by Start Bootstrap</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <% @posts.each do |post| %>
      <div class="post-preview">
        <h2 class="post-title"><%= link_to post.title, post %></h2>
        <h3 class="post-subtitle"><%= post.content %></h3>
        <p><%= link_to "bearbeiten", edit_post_path(post) %> | 
        <%= link_to "lÃ¶schen", post, :data => {:confirm => "Bist du sicher?"}, :method => :delete %></p>
        <% end %>
      </div>
      <hr>
      <!-- Pager -->
      <ul class="pager">
        <li class="next">
          <a href="#">Older Posts &rarr;</a>
        </li>
      </ul>
    </div>
  </div>
</div>


<p><%= link_to "Neuen Beitrag erstellen", new_post_path %></p>