<h1>Neuen Beitrag erstellen</h1>
<% if @post.errors.any? %>
  <h2>Fehler:</h2>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %> 

<%= form_for @post do |f| %>
	<p>
	  <%= f.label :title %><br />
    <%= f.text_field :title, required: "required"  %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, required: "required"  %>
  </p> 
  <p>
  <%= f.submit "Beitrag speichern" %>
  </p>
<% end %>